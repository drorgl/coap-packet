{
  "compilerOptions": {
      "types": [
          "node"
      ],
      "outDir": "dist",
      "moduleResolution": "node",
      "module": "commonjs", 
      "removeComments": false,
      "sourceMap": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports":true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "declaration": true,
      "target":"es2017",
      "rootDir": "src",
      "lib": [
          "es2017",
          "dom"
      ],  
      // "lib": [
      //     "es2015",
      //     "dom"
      // ],
      "typeRoots": [
          "node_modules/@types",
      ]
  },
  "include": [
      "./src/**/*.ts"
  ]
}